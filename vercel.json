{
  "version": 2,
  "builds": [
    {
      "src": "api/mail.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/send-email",
      "dest": "/api/mail.js"
    }, 
    {
      "src": "/",
      "dest": "/build/index.html"
    }
  ],
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  }
}